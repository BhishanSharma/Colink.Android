<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AvatarActivity">

    <LinearLayout
        android:id="@+id/avatar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/choose_an_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/choose_an_a"
            android:textAppearance="@style/choose_an_a"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/selected_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/selected_avatar_desc"
            android:src="@drawable/avatar1"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@id/gs_button"
        android:layout_below="@id/avatar_header"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/selected_avatar_desc"
                android:src="@drawable/avatar_image1" />

            <ImageView
                android:id="@+id/avatar_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/selected_avatar_desc"
                android:src="@drawable/avatar_image2" />

            <ImageView
                android:id="@+id/avatar_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/selected_avatar_desc"
                android:src="@drawable/avatar_image3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/selected_avatar_desc"
                android:src="@drawable/avatar_image4" />

            <ImageView
                android:id="@+id/avatar_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/selected_avatar_desc"
                android:src="@drawable/avatar_image5" />

            <ImageView
                android:id="@+id/avatar_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/selected_avatar_desc"
                android:src="@drawable/avatar_image6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/selected_avatar_desc"
                android:src="@drawable/avatar_image7" />

            <ImageView
                android:id="@+id/avatar_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/selected_avatar_desc"
                android:src="@drawable/avatar_image8" />

            <ImageView
                android:id="@+id/avatar_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/selected_avatar_desc"
                android:src="@drawable/avatar_image9" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/gs_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/getstartedbutton"
        android:textSize="32sp" />

</RelativeLayout>
